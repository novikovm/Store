{% extends 'ProjectStoreBundle::layout.html.twig' %}

{% block header %}Filmy{% endblock %}

{% block content %}
		<div class="row">
			<div class="col-md-2">
				<select class="form-control" onchange="location = this.options[this.selectedIndex].value;">
					<option value="{{path('project_store_homepage')}}" selected>Wszystkie</option>
		  			{% for genre in genres %}
				  		<option value="{{path('project_store_genre', {'name': genre.name})}}" {% if genre.name == selected %}selected="selected"{% endif %}>{{ genre.name }}</option>
				  	{% endfor %}
				</select>
				<br>
			</div>
			<div class="col-md-3">
				<select class="form-control" onchange="location = this.options[this.selectedIndex].value;">
					<option value="{{path('project_store_homepage')}}" {% if selected=="dodania" %}selected="selected"{% endif %}>W kolejności dodania</option>
					<option value="{{path('project_store_homepage')}}">Najczesciej wypożyczane</option>
		  			<option value="{{path('project_store_recenzowane')}}" {% if selected=="recenzowane" %}selected="selected"{% endif %}>Najczęsciej recenzowane</option>
				</select>
				<br>
			</div>
		</div>

		<div class="row">
			{% for movie in movies %}
					<div class="col-xs-7 col-lg-3">
					<a href="{{path('project_store_movie', {'slug': movie.title})}}">
					<img src="{{ movie.cover }}">
					<br><h5 color="black">{{ movie.title }}</h3></a>
					</div>
			{% endfor %}
		</div>
{% endblock %}
